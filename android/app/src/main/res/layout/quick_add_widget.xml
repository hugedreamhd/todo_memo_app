<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- 헤더: 앱 이름 -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="오늘의 할 일"
        android:textColor="#99FFFFFF"
        android:textSize="11sp" />

    <!-- 날짜 -->
    <TextClock
        android:id="@+id/widget_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:format24Hour="M월 d일 EEEE"
        android:format12Hour="M월 d일 EEEE"
        android:textColor="#FFFFFF"
        android:textSize="14sp" />

    <!-- 메모 목록 영역 -->
    <LinearLayout
        android:id="@+id/widget_todo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/todo_item_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/todo_item_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/todo_item_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:visibility="gone" />
            
        <TextView
            android:id="@+id/widget_todo_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="오늘의 할 일을 추가해보세요 ✨"
            android:textColor="#BBFFFFFF"
            android:textSize="12sp"
            android:visibility="visible" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 메모 추가 버튼 -->
    <LinearLayout
        android:id="@+id/btn_quick_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/widget_button_bg"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="＋  메모 추가하기"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

</LinearLayout>
